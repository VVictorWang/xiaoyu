<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/change_xiao_yu_number_back"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/back_to_main_image_background_last_register"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:src="@drawable/backwards_iamge"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/back_to_main_image_background_contact_list_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/back_to_main_image_background_contact_list"
        android:paddingTop="14dp"
        android:text="主页"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="35dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="更改小鱼号"
        android:paddingTop="14dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/change_xiao_yu_number_back"
        android:layout_marginLeft="75dp" />


    <TextView
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="71dp"
        android:paddingTop="10dp"
        android:text="更改密码"
        android:textColor="@color/whites"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="46dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="130dp"
        app:hintEnabled="false"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/change_bind_name_layout"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/textInputLayout">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/change_password_new"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:textColorHint="@color/white"
            android:hint="请输入新密码"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="196dp"
        app:hintEnabled="false"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/change_bind_name_layout"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp"
        >


        <android.support.design.widget.TextInputEditText
            android:id="@+id/change_password_new_confirm"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:textColorHint="@color/white"
            android:hint="请再次输入新密码"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="65dp"
        app:hintEnabled="false"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/change_bind_name_layout"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp"
        >


        <android.support.design.widget.TextInputEditText
            android:id="@+id/change_password_old"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:textColorHint="@color/white"
            android:hint="请输入原密码"

            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/change_password_finish"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:text="完成"
        android:textColor="@color/whites"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/change_bind_name_layout"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="114dp"
        android:paddingRight="10dp"
        app:hintEnabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/change_password_username"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:textColorHint="@color/white"
            android:background="@drawable/sign_xiao_yu_background"
            android:hint="请输入用户名"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>