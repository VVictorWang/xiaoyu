<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_vertical"
  android:background="#ffffff"
  android:orientation="vertical"
  android:layout_marginLeft="5dp"
  android:layout_marginRight="5dp">
  <RelativeLayout
    android:layout_height="70dp"
    android:layout_width="match_parent"
    android:id="@+id/call_record"
    >
    <com.victor.myclient.view.CircleImageView
      android:id="@+id/record_icon"
      android:layout_centerVertical="true"
      android:src="@drawable/contact_image"
      android:layout_marginLeft="5dip"
      android:layout_height="45dp"
      android:layout_width="45dp"
      android:text="find"
      />
    <TextView
      android:id="@+id/record_title"
      android:layout_toRightOf="@+id/record_icon"
      android:layout_marginTop="10dp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:textColor="#1c1c1e"
      android:layout_marginLeft="20dp"
      android:textSize="18sp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/record_title"
      android:layout_toRightOf="@+id/record_icon"
      android:id="@+id/record_number_list"
      android:layout_marginLeft="20dp"
      android:textColor="#6e6e6f"
      android:textSize="14sp"
      android:layout_marginBottom="14dp"
      />
    <TextView
      android:text="今天"
      android:id="@+id/call_time"
      android:layout_width="45dp"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:layout_marginLeft="20dp"
      android:textColor="#6e6e6f"
      android:textSize="14sp"
      android:layout_marginBottom="14dp"
      />
    <ImageView
      android:src="@drawable/call_image"
      android:id="@+id/call_type"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_toLeftOf="@id/call_time"
      android:layout_centerVertical="true"
      />
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"
      android:background="#a2a4a5"/>
  </RelativeLayout>
</LinearLayout>