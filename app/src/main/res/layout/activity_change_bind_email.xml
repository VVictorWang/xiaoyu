<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <RelativeLayout
            android:id="@+id/change_email_back_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_to_main_image_background_change_emali"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/backwards_iamge"
                />

            <TextView
                android:id="@+id/back_to_main_image_background_change_emali_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_to_main_image_background_change_emali"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18dp"

                app:layout_constraintTop_toTopOf="parent"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更改邮箱"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/bind_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="邮箱绑定"
        android:textColor="@color/whites"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/bind_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/bind_email_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入要绑定的邮箱"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/whites"
        android:textColorHint="@color/whites"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/bind_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/bind_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入用户名"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/whites"
        android:textColorHint="@color/whites"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/change_email_password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/bind_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入密码"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/whites"
        android:textColorHint="@color/whites"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/finish_change_email"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@+id/change_email_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:paddingBottom="5dp"
        android:text="完成"
        android:textColor="@color/whites"
        android:textSize="18dp"
        />
</RelativeLayout>