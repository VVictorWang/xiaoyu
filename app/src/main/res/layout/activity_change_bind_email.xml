<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:id="@+id/change_email_back_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_to_main_image_background_change_emali"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="6dp"
            android:src="@drawable/backwards_iamge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/back_to_main_image_background_change_emali_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/back_to_main_image_background_change_emali"
            android:paddingTop="14dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18dp"

            app:layout_constraintTop_toTopOf="parent"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="0dp"
        android:paddingTop="14dp"
        android:text="更改邮箱"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/change_email_back_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="65dp"
        android:text="邮箱绑定"
        android:textColor="@color/whites"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/bind_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="102dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入要绑定的邮箱"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/whites"
        android:textColorHint="@color/whites"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/bind_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入用户名"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/whites"
        android:textColorHint="@color/whites"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/change_email_password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入密码"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/whites"
        android:textColorHint="@color/whites"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/finish_change_email"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:paddingBottom="5dp"
        android:text="完成"
        android:textColor="@color/whites"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>