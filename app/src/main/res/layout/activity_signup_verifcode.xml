<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="96dp"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:hintEnabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/enter_password"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textColorHint="@color/white"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="166dp"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:hintEnabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/enter_password_again"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:hint="请再次输入您的密码"
            android:paddingBottom="10dp"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textColorHint="@color/white"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>


    <CheckBox
        android:id="@+id/checkBox"
        style="@style/CustomCheckBoxStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="237dp"
        android:paddingLeft="8dp"
        android:text="我同意软件服务条款"
        android:textColor="@color/whites"
        android:textSize="13dp"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_to_second_register"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:paddingBottom="5dp"
        android:text="下一步"
        android:textColor="@color/whites"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="26dp"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:hintEnabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/enter_phone_number"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:hint="请输入您要注册的手机号"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textColorHint="@color/white"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>