<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_room_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/my_background">

        <RelativeLayout
            android:id="@+id/fragment_room_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fragment_room_back_image"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/backwards_iamge" />

            <TextView
                android:id="@+id/fragment_room_back_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fragment_room_back_image"
                android:text="主页"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="人员活动"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_room_toolbar">

        <FrameLayout
            android:id="@+id/bed_room1"
            android:layout_width="130dp"
            android:background="@drawable/bed_room1"
            android:layout_height="110dp">




            <TextView
                android:id="@+id/bed_room1_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="12"
                android:textColor="@color/whites"
                android:textSize="15dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/washing_room"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/bed_room1"
            android:background="@drawable/washing_room">


            <TextView
                android:id="@+id/washing_room_text"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom|right"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="11dp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/kitchen_room"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_below="@+id/washing_room"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/bed_room1"
            android:background="@drawable/kitchen_room">

            <TextView
                android:id="@+id/kitchen_room_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="1dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="15dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bed_room2"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_below="@+id/washing_room"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/kitchen_room"
            android:background="@drawable/bed_room2">

            <TextView
                android:id="@+id/bed_room2_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="14dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/store_room"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_below="@+id/bed_room1"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/store_room">

            <TextView
                android:id="@+id/store_room_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="14dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/dinig_room"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_below="@+id/kitchen_room"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/store_room"
            android:background="@drawable/dining_room">

            <TextView
                android:id="@+id/dinig_room_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="14dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bed_room3"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_below="@+id/bed_room2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/dinig_room"
            android:background="@drawable/bed_room3">

            <TextView
                android:id="@+id/bed_room3_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="14dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/living_room"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_below="@+id/dinig_room"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/living_room">

            <TextView
                android:id="@+id/living_room_text"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="16dp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/other_room"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_below="@+id/bed_room3"
            android:layout_toRightOf="@+id/living_room"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/other_room">

            <TextView
                android:id="@+id/other_room_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:paddingLeft="1dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/whites"
                android:textSize="14dp" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>