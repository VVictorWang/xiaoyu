<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <RelativeLayout
            android:id="@+id/setting_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_to_main_image_background_setting"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/backwards_iamge"
                />

            <TextView
                android:id="@+id/back_to_main_image_background_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_to_main_image_background_setting"
                android:text="主页"
                android:textColor="@color/white"
                android:textSize="18dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="18dp"
            />


    </RelativeLayout>

    <com.victor.myclient.view.CircleImageView
        android:id="@+id/login_head_setting"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/person"
        />

    <Button
        android:id="@+id/setting_change_image"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@color/transparent"
        android:text="点击更改"
        android:textSize="10dp"
        />

    <RelativeLayout
        android:id="@+id/mail_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_head_setting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/change_mail"
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/setting_mail"
            android:cursorVisible="false"
            android:enabled="false"
            android:paddingLeft="15dp"
            android:text="绑定邮箱：123456@123.com"
            android:textColor="@color/whites"
            android:textSize="13dp"
            />

        <com.victor.myclient.view.CircleTextImageView
            android:id="@+id/change_mail_button"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/setting_chang_button"
            app:citv_text_color="@color/whites"
            app:citv_text_size="16dp"
            app:citv_text_text="更改"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mail_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/change_password_text"
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"

            android:background="@drawable/setting_mail"
            android:cursorVisible="false"
            android:enabled="false"
            android:paddingLeft="15dp"
            android:text="修改密码"
            android:textColor="@color/whites"
            android:textSize="13dp"
            />

        <com.victor.myclient.view.CircleTextImageView
            android:id="@+id/change_password"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/setting_chang_button"
            app:citv_text_color="@color/whites"
            app:citv_text_size="16dp"
            app:citv_text_text="更改"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/logout_out_button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/setting_logout"
        android:paddingTop="5dp"
        android:text="       账号登出"
        android:textColor="@color/whites"
        android:textSize="14dp"
        />
    <!--android:background="@color/colorPrimary"-->
    <!--style="@style/Widget.AppCompat.Button.Borderless"-->
