<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/my_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/case_list_back"
            android:layout_height="match_parent">




            <ImageView
                android:id="@+id/back_to_main_image_background_case_list"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:src="@drawable/backwards_iamge" />

            <TextView
                android:id="@+id/back_to_main_image_background_case_list_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back_to_main_image_background_case_list"
                android:paddingTop="12dp"
                android:text="主页"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="病历列表"
            android:paddingTop="12dp"
            android:layout_marginLeft="145dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>