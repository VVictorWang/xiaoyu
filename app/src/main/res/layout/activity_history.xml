<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#24d0fd"
                android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/history_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/my_background">

        <RelativeLayout
            android:id="@+id/back_to_main_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/back_to_main_image_background_jiujia"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:src="@drawable/backwards_iamge"/>

            <TextView
                android:id="@+id/back_to_main_image_background_contact_jiujia_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_to_main_image_background_jiujia"
                android:text="主页"
                android:textColor="@color/white"
                android:textSize="18dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="上门服务"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="无数据"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="invisible"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/history_activity_toolbar"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</RelativeLayout>
