<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ainemo.pad.SimpleVideoView
        android:id="@+id/remote_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/drop_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hang up" />

    <Button
        android:id="@+id/switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drop_call"
        android:text="switch camera" />

    <Button
        android:id="@+id/switch_mic_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/switch_camera"
        android:text="switch mic mute" />

    <Button
        android:id="@+id/switch_call_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drop_call"
        android:text="switch call mode" />

    <Button
        android:id="@+id/switch_video_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_mic_mute"
        android:layout_toRightOf="@id/switch_call_module"
        android:text="set layout force target" />

    <TextView
        android:id="@+id/remote_video_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_call_module"
        android:text="" />

    <TextView
        android:id="@+id/remote_audio_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_call_module"
        android:layout_toRightOf="@id/remote_video_state"
        android:text="" />

    <ImageView
        android:id="@+id/shared_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

