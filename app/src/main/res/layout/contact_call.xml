<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24d0fd"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >


        <RelativeLayout
            android:id="@+id/back_to_main_contact_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/back_to_main_image_background_contact_call"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/backwards_iamge"/>

            <TextView
                android:id="@+id/back_to_main_image_background_contact_call_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_to_main_image_background_contact_call"
                android:text="主页"
                android:textColor="@color/white"
                android:textSize="18dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="拨号"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/call_number"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxWidth="290dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="32sp"
        tools:text="1234566"
        />

    <com.victor.myclient.view.CircleImageView
        android:id="@+id/backspace_number_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/backspace_number"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_number"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            >

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="2"
                />

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/number_call_2"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="1"
                />


            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/number_call_2"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="3"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/first_layout"
            >

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="5"
                />

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/number_call_5"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="4"
                />

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/number_call_5"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="6"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/third_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/second_layout"
            >

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="8"
                />

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/number_call_8"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="7"
                />


            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/number_call_8"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="9"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fouth_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/third_layout"
            >

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="0"
                />

            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/number_call_0"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="40sp"
                app:citv_text_text="*"
                />


            <com.victor.myclient.view.CircleTextImageView
                android:id="@+id/number_call_11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/number_call_0"
                android:src="@drawable/call_number_image"
                app:citv_text_color="#ffffff"
                app:citv_text_size="30sp"
                app:citv_text_text="#"
                />
        </RelativeLayout>

        <com.victor.myclient.view.CircleTextImageView
            android:id="@+id/number_call"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/fouth_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/call_image"
            />
    </RelativeLayout>
</RelativeLayout>