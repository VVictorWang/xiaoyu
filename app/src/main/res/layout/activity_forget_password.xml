<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background"
    tools:context="com.victor.myclient.view.Login.ForgetPassword">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forget_password_toolbar">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/forget_password_back"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forget_password_back_image"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:paddingLeft="6dp"
            android:src="@drawable/backwards_iamge"
            android:layout_marginLeft="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/forget_password_back_image_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="14dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18dp"

            android:layout_toRightOf="@+id/forget_password_back_image"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="忘记密码"
        android:paddingTop="14dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="150dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_password_toolbar"
        android:text="忘记密码"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/forget_password_text"
        android:layout_marginTop="10dp"
        />
  <Button
      android:layout_width="240dp"
      android:layout_height="60dp"
      android:id="@+id/forget_password_button"
      android:layout_below="@+id/forget_password_text"
      android:background="@drawable/sign_xiao_yu_background"
      android:layout_marginLeft="75dp"
      android:text="点击发送邮件找回密码"
      android:textColor="@color/white"
      android:paddingBottom="8dp"
      android:textSize="14dp"
      style="?android:attr/borderlessButtonStyle"
      android:layout_marginTop="30dp"/>

</RelativeLayout>
