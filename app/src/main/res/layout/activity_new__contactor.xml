<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background"
    tools:context="com.victor.myclient.ui.activity.contact.NewContactorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/my_background"
        android:id="@+id/add_new_contact_toolbar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/back_to_main_add_new_contact"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_to_main_add_new_contact_image"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:src="@drawable/backwards_iamge" />

            <TextView
                android:id="@+id/back_to_main_add_new_contact_image_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back_to_main_add_new_contact_image"
                android:paddingTop="12dp"
                android:text="主页"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新建联系人"
            android:paddingTop="12dp"
            android:layout_marginLeft="135dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

    </RelativeLayout>
    <android.support.design.widget.TextInputEditText
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/add_new_contact_toolbar"
        android:id="@+id/new_contact_name"
        android:textColorHint="@color/white"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入联系人姓名"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:textSize="15dp"
        android:textColor="@color/white"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:layout_below="@+id/new_contact_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@color/white"
        android:hint="请输入联系人小鱼号"
        android:paddingLeft="20dp"
        android:id="@+id/new_contact_xiao_yu_number"
        android:paddingBottom="5dp"
        android:textSize="15dp"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:layout_below="@+id/new_contact_xiao_yu_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="完成"
        android:id="@+id/new_contact_finish"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingBottom="5dp"
        style="?android:attr/borderlessButtonStyle"
        />

</RelativeLayout>
