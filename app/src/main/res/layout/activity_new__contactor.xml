<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/my_background"
                android:focusableInTouchMode="true"
                tools:context="com.victor.myclient.ui.activity.NewContactorActivity">

    <RelativeLayout
        android:id="@+id/add_new_contact_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/my_background">

        <RelativeLayout
            android:id="@+id/back_to_main_add_new_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_to_main_add_new_contact_image"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/backwards_iamge"/>

            <TextView
                android:id="@+id/back_to_main_add_new_contact_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_to_main_add_new_contact_image"
                android:text="主页"
                android:textColor="@color/white"
                android:textSize="18dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="135dp"
            android:text="新建联系人"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

    </RelativeLayout>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/new_contact_name"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_below="@+id/add_new_contact_toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入联系人姓名"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/new_contact_xiao_yu_number"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_below="@+id/new_contact_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:hint="请输入联系人小鱼号"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/new_contact_finish"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_below="@+id/new_contact_xiao_yu_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:paddingBottom="5dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="15dp"
        />

</RelativeLayout>
