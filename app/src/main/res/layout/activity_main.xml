<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#24d0fd"
                                             android:orientation="vertical"
                                             tools:context="com.victor.myclient.activity.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16dp"
        android:textColor="@color/whites"
        android:text="33联动医养融合"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="135dp"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent" />







    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingLeft="13dp"
        android:paddingTop="30dp"
        android:src="@drawable/person"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="201dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="201dp" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王小二"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="170dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text"
        android:layout_toRightOf="@+id/person_image"
        android:paddingTop="8dp"
        android:text="绑定小鱼号"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:id="@+id/bangding_xiaoyu_number"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="170dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_call"
        android:text="小鱼通话时长："
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_below="@+id/bangding_xiaoyu_number"
        android:layout_toRightOf="@+id/person_image"
        android:layout_toEndOf="@+id/person_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="126dp"
        android:layout_marginLeft="170dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/case_for_patient"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:paddingLeft="20dp"
        android:src="@drawable/infor_small"
        app:citv_text_color="#ffffff"
        app:citv_text_size="30sp"
        app:citv_text_text="病例查看"
        android:layout_below="@+id/bangding_xiaoyu_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="172dp"
        android:layout_marginRight="109dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="105dp" />




    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/call_others"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/infor_small"
        app:citv_text_color="#ffffff"

        app:citv_text_size="23sp"
        app:citv_text_text="呼叫"
        android:layout_marginEnd="10dp"
        android:layout_alignRight="@+id/setting_default"
        android:layout_alignEnd="@+id/setting_default"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.967"
        android:layout_marginStart="8dp" />

    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/jujia_main"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/infor_small"
        app:citv_text_color="#ffffff"
        app:citv_text_size="20sp"
        app:citv_text_text="居家参数查看"
        android:layout_alignBottom="@+id/setting_default"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        android:layout_marginEnd="8dp" />

    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/setting_default"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/infor_small"
        app:citv_text_color="#ffffff"
        app:citv_text_size="20sp"
        app:citv_text_text="设置"
        android:layout_toRightOf="@+id/jujia_main"
        android:layout_toEndOf="@+id/jujia_main"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        android:layout_marginEnd="31dp" />



</android.support.constraint.ConstraintLayout>