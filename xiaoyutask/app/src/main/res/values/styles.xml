<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.ToolBar.Contact" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="CustomCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_strle</item>
    </style>
    <style name="CustomRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/checkbox_strle</item>
    </style>
    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
    <item name="tabPaddingStart">0dp</item>
    <item name="tabPaddingEnd">0dp</item>
    </style>

</resources>
