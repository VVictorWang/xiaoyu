<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimary"
  >
  <RelativeLayout
      android:layout_width="wrap_content"
      android:id="@+id/change_email_back_back"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/back_to_main_image_background_change_emali"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:src="@drawable/backwards_iamge"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/back_to_main_image_background_change_emali_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingTop="14dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_toRightOf="@+id/back_to_main_image_background_change_emali"
        />
  </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:text="更改邮箱"
      android:paddingTop="14dp"
      android:textColor="@color/white"
      android:textSize="18dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="0dp"
      app:layout_constraintLeft_toRightOf="@+id/change_email_back_back"
      android:layout_marginLeft="83dp" />
  <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="邮箱绑定"
    android:layout_marginLeft="80dp"
      android:textColor="@color/whites"
      android:textSize="20dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="65dp"
    android:layout_marginStart="50dp" />
  <EditText
    android:background="@drawable/sign_xiao_yu_background"
    android:id="@+id/bind_email"
    android:layout_width="300dp"
    android:layout_height="60dp"
      android:paddingLeft="20dp"
    android:hint="请输入要绑定的邮箱"
      android:textSize="16dp"
    android:layout_marginLeft="8dp"
      android:textColor="@color/whites"
      android:textColorHint="@color/whites"
      android:paddingBottom="5dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="104dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    />
  <EditText
      android:background="@drawable/sign_xiao_yu_background"
      android:id="@+id/bind_name"
      android:layout_width="300dp"
      android:layout_height="60dp"
      android:paddingLeft="20dp"
      android:hint="请输入用户名"
      android:textSize="16dp"
      android:layout_marginLeft="8dp"
      android:textColor="@color/whites"
      android:textColorHint="@color/whites"
      android:paddingBottom="5dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="170dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      />
  <EditText
      android:background="@drawable/sign_xiao_yu_background"
      android:id="@+id/change_email_password"
      android:layout_width="300dp"
      android:layout_height="60dp"
      android:paddingLeft="20dp"
      android:hint="请输入密码"
      android:textSize="16dp"
      android:layout_marginLeft="8dp"
      android:textColor="@color/whites"
      android:textColorHint="@color/whites"
      android:paddingBottom="5dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="236dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      />
  <Button
    android:id="@+id/finish_change_email"
    android:layout_width="280dp"
    android:layout_height="60dp"
android:textSize="20dp"
    android:text="完成"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/sign_xiao_yu_background"
    android:layout_marginTop="370dp"
    android:layout_marginStart="8dp"
      android:textColor="@color/whites"
      android:paddingBottom="5dp"
      style="?android:attr/borderlessButtonStyle"
    android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>