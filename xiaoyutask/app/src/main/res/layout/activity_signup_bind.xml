<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background">



    <TextView
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="71dp"
        android:paddingTop="10dp"
        android:text="小鱼端绑定"
        android:textColor="@color/whites"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="46dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="66dp"
        app:hintEnabled="false"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bind_name_layout"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/bind_idcard"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:cursorVisible="false"
            android:hint="请输入小鱼终端申请人姓名"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColorHint="@color/white"
            android:textColor="@color/whites"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sign_up_last_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="259dp"
        android:background="@drawable/sign_xiao_yu_background"
        android:text="注册完成"
        android:textColor="@color/whites"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bind_name_layout"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="114dp"
        android:paddingRight="10dp"
        app:errorTextAppearance="@color/whites"
        app:hintEnabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/bind_name"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/sign_xiao_yu_background"
            android:cursorVisible="false"
            android:textColorHint="@color/white"
            android:hint="请输入小鱼终端申请人姓名"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/whites"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>