<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/my_background"
        android:layout_height="45dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/back_doctor_detail">



        <ImageView
            android:id="@+id/back_to_main_image_background_doctor_infor"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:paddingLeft="6dp"
            android:paddingTop="5dp"
            android:src="@drawable/backwards_iamge" />

        <TextView
            android:id="@+id/back_to_main_image_background_doctor_infor_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/back_to_main_image_background_doctor_infor"
            android:paddingTop="12dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16dp" />
</RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:paddingTop="12dp"
            android:text="医生信息"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/person_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/segment" />

        <include
            layout="@layout/doctor_part2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/segment" />

            <TextView
                android:id="@+id/doctor_info_intro"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="15dp"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:paddingTop="10dp"
                android:text="医生介绍"
              />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_info_intro"
                android:id="@+id/doctor_info_intro_detail"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="14dp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>